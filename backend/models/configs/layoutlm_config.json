{
  "model": {
    "name": "layoutlm",
    "architecture": "LayoutLMForTokenClassification",
    "base_model": "microsoft/layoutlm-base-uncased",
    "vocab_size": 30522,
    "hidden_size": 768,
    "num_hidden_layers": 12,
    "num_attention_heads": 12,
    "intermediate_size": 3072,
    "hidden_act": "gelu",
    "hidden_dropout_prob": 0.1,
    "attention_probs_dropout_prob": 0.1,
    "max_position_embeddings": 512,
    "type_vocab_size": 2,
    "initializer_range": 0.02,
    "layer_norm_eps": 1e-12,
    "max_2d_position_embeddings": 1024
  },
  "labels": {
    "invoice_fields": [
      "O",
      "B-COMPANY",
      "I-COMPANY",
      "B-DATE",
      "I-DATE",
      "B-INVOICE_NO",
      "I-INVOICE_NO",
      "B-TOTAL",
      "I-TOTAL",
      "B-ADDRESS",
      "I-ADDRESS",
      "B-ITEM",
      "I-ITEM",
      "B-QUANTITY",
      "I-QUANTITY",
      "B-PRICE",
      "I-PRICE",
      "B-AMOUNT",
      "I-AMOUNT",
      "B-TAX",
      "I-TAX",
      "B-GST",
      "I-GST",
      "B-FSSAI",
      "I-FSSAI"
    ],
    "num_labels": 25
  },
  "preprocessing": {
    "max_seq_length": 512,
    "doc_stride": 128,
    "padding": "max_length",
    "truncation": true,
    "include_bounding_boxes": true,
    "normalize_boxes": true,
    "box_format": "xyxy"
  },
  "tokenizer": {
    "do_lower_case": true,
    "add_special_tokens": true,
    "return_attention_mask": true,
    "return_token_type_ids": true,
    "return_tensors": "pt"
  },
  "inference": {
    "batch_size": 8,
    "confidence_threshold": 0.75,
    "aggregation_strategy": "first",
    "merge_subwords": true,
    "use_layout_features": true
  },
  "training": {
    "batch_size": 8,
    "learning_rate": 5e-5,
    "epochs": 5,
    "weight_decay": 0.01,
    "warmup_ratio": 0.1,
    "gradient_accumulation_steps": 1,
    "max_grad_norm": 1.0,
    "logging_steps": 100,
    "eval_steps": 500,
    "save_steps": 1000,
    "save_total_limit": 3
  },
  "optimization": {
    "fp16": true,
    "dataloader_num_workers": 4,
    "dataloader_pin_memory": true,
    "gradient_checkpointing": false
  }
}